@page "/test"

<div class="container mt-5">
    <h1 class="text-center">Point of Sale</h1>
    <div class="row mt-5">
        <div class="col-md-6">
            <h2>Select Items</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Add</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Computer</td>
                        <td>$1200</td>
                        <td><input type="number" value="1" min="1" max="100"></td>
                        <td><button class="btn btn-primary">Add</button></td>
                    </tr>
                    <tr>
                        <td>Graphic Card</td>
                        <td>$500</td>
                        <td><input type="number" value="1" min="1" max="100"></td>
                        <td><button class="btn btn-primary">Add</button></td>
                    </tr>
                    <tr>
                        <td>Processor</td>
                        <td>$300</td>
                        <td><input type="number" value="1" min="1" max="100"></td>
                        <td><button class="btn btn-primary">Add</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h2>Shopping Cart</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody id="shoppingCart">
                    <!-- Cart items will be dynamically added here -->
                </tbody>
            </table>
            <h3>Total: $<span id="totalPrice">0</span></h3>
            <button class="btn btn-success" @onclick="ShowAlert">Checkout</button>
        </div>
    </div>
</div>

@code {
    private async Task ShowAlert()
    {
        // Show an alert when the Checkout button is clicked
        await JSRuntime.InvokeVoidAsync("alert", "Checkout clicked!");
    }

    [Inject]
    private IJSRuntime JSRuntime { get; set; }
}
